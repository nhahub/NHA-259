@{
    Layout = null; // Since this is a full landing page, no layout for now
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Heavy Go - Furniture Moving Service</title>

    <!-- Google Fonts for cool brand -->
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #0e0d0d;
            color: #fff;
            font-family: 'Roboto', sans-serif;
        }

        /* NAVBAR */
        .navbar {
            background: rgba(0,0,0,0.8);
        }
        .navbar-brand {
            font-family: 'Pacifico', cursive;
            font-size: 2rem;
            font-style: italic;
            color: #c59cff !important;
            letter-spacing: 1px;
        }
        .navbar-brand:hover {
            color: #e8d7ff !important;
        }
        .navbar .btn-purple {
            background-color: #7a1fbf;
            border: none;
            transition: 0.3s;
        }
        .navbar .btn-purple:hover {
            background-color: #6a18a8;
        }

        /* HERO SECTION */
        .hero {
            height: 90vh;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.7)),
                        url('/images/truck2.gif') center/cover no-repeat;
            background-size: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-bottom: 40px;
        }
        .hero h1 {
            font-size: clamp(2rem, 5vw, 3.5rem);
            font-weight: 700;
            color: #c59cff;
            text-shadow: 2px 2px 10px rgba(122,31,191,0.6);
        }
        .hero p {
            font-size: 1.3rem;
            color: #e8d7ff;
        }
        .hero .btn-purple {
            background-color: #7a1fbf;
            border: none;
            padding: 0.8rem 2rem;
            font-size: 1.1rem;
            transition: 0.3s;
        }
        .hero .btn-purple:hover {
            background-color: #6a18a8;
        }

        /* INFO SECTION */
        .section-info {
            padding: 60px 20px;
            background-color: #1a1a1a;
        }
        .info-card {
            background-color: #262626;
            border-radius: 12px;
            padding: 20px;
            color: white;
            transition: transform 0.3s;
        }
        .info-card:hover {
            transform: translateY(-5px);
        }

        /* COMPANY LOGOS SECTION */
        /* Logo card container */
        .section-logos {
            padding: 40px 20px;
            text-align: center;
            background-color: #121212;
        }
        .logo-card {
            width: 150px; /* Fixed width */
            height: 100px; /* Fixed height */
            background-color: #262626; /* Card background */
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .logo-card img {
            max-width: 80%; /* Image fits nicely */
            max-height: 80%; /* Image fits nicely */
            object-fit: contain;
        }

        .logo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(122,31,191,0.5);
        }


        /* FOOTER */
        footer {
            background: #1a1a1a;
            padding: 30px 20px;
            text-align: center;
            color: #c59cff;
        }
        footer a {
            color: #e8d7ff;
            text-decoration: none;
            transition: 0.3s;
        }
        footer a:hover {
            color: #fff;
        }

        /* RESPONSIVE */
        @@media(max - width: 576px) {
            .hero h1 {
                font-size: 2rem;
            }
            .hero p {
                font-size: 1rem;
            }
            .navbar .btn {
                font-size: 0.8rem;
                padding: 0.25rem 0.7rem;
            }
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark px-4">
        <a class="navbar-brand" href="#">Heavy Go</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="d-flex ms-auto align-items-center">
                <a class="btn btn-outline-light btn-sm me-2 mb-1 mb-lg-0" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION -->
    <section class="hero">
        <div>
            <h1>Move Your Furniture Quickly & Safely</h1>
            <p>Order a truck, negotiate the price, and track your move easily.</p>
            <a class="btn btn-purple btn-lg mt-3" asp-area="Identity" asp-page="/Account/ChooseRole">Register</a>

        </div>
    </section>

    <!-- INFO SECTION -->
    <section class="section-info text-center text-light">
        <h2 class="mb-4" style="color:#c59cff;">How It Works</h2>
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="info-card">
                        <h4>1. Register / Login</h4>
                        <p>Create your account and get started in seconds.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-card">
                        <h4>2. Order Your Truck</h4>
                        <p>Enter your pickup/drop locations and furniture details.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="info-card">
                        <h4>3. Track Your Move</h4>
                        <p>Follow the truck location or get updates instantly.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- COMPANY LOGOS -->
    <section class="section-logos">
        <h3 class="mb-4">Trusted By</h3>
        <div class="container d-flex flex-wrap justify-content-center gap-3">
            <div class="logo-card">
                <img src="/images/logo1.jpg" alt="Company 1">
            </div>
            <div class="logo-card">
                <img src="/images/logo2.png" alt="Company 2">
            </div>
            <div class="logo-card">
                <img src="/images/logo3.jpg" alt="Company 3">
            </div>
            <div class="logo-card">
                <img src="/images/logo4.jpg" alt="Company 4">
            </div>
        </div>
    </section>


    <!-- FOOTER -->
    <footer>
        <p>&copy; 2025 Heavy Go. All rights reserved.</p>
        <p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
