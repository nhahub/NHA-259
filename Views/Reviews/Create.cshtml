@model HeavyGo_Project_Identity.Models.Review

@{
    ViewData["Title"] = "Submit Review";
}

<h2>Submit Review for Order #@Model.OrderId</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" required />
    </div>

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control" rows="3" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit Review</button>
</form>
