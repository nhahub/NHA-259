@{
    Layout = "_Layout"; // or null if you want standalone page
}
@model ApplicationUser
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-5">
    <div class="row">
        <!-- Left Column: Profile Info -->
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <img src="~/images/profile.jpg" class="rounded-circle mb-3" alt="Profile Picture" width="120" height="120">
                    <h4 class="card-title">@Html.DisplayFor(model=>model.UserName)</h4>
                    <h5 class="card-text">@Html.DisplayFor(model=>model.FullName)</h5>
                    <p class="card-text">@Html.DisplayFor(model=>model.Email)</p>
                    <p class="card-text">@Html.DisplayFor(model=>model.PhoneNumber)</p>
                    <button class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Manage/Index">Edit Profile</button>
                    <form asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary btn-sm">
                        <button type="btn btn-primary btn-sm" class="">Edit Profile</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column: Orders & Account Settings -->
        <div class="col-md-8">
            <!-- Navigation -->
            <ul class="nav nav-tabs mb-3" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">Orders</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">Account Settings</button>
                </li>
            </ul>

            <div class="tab-content" id="profileTabsContent">
                <!-- Orders Tab -->
                <div class="tab-pane fade show active" id="orders" role="tabpanel">
                    <div class="card mb-3">
                        <div class="card-header">Current Orders</div>
                        <div class="card-body">
                            <p>No current orders.</p>
                            <!-- Example order item -->
                            <!--
                            <div class="mb-2 p-2 border rounded">
                                <strong>Order #1234</strong> - Pending
                                <br>Date: 23 Nov 2025
                            </div>
                            -->
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header">Past Orders</div>
                        <div class="card-body">
                            <p>No past orders yet.</p>
                        </div>
                    </div>
                </div>

                <!-- Account Settings Tab -->
                <div class="tab-pane fade" id="settings" role="tabpanel">
                    <div class="card mb-3">
                        <div class="card-header">Account Settings</div>
                        <div class="card-body">
                            <form asp-area="Identity" asp-page="/Account/ResetPassword">
                                <button class="btn btn-outline-secondary mb-2">Change Password</button>
                            </form>
                            <br>
                            <button class="btn btn-outline-secondary mb-2">Manage Payment Methods</button>
                            <br>
                            <button class="btn btn-outline-secondary mb-2">Notification Preferences</button>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body text-center">
                            <form asp-area="Identity" asp-page="/Account/Logout">
                                <button class="btn btn-danger">Logout</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
